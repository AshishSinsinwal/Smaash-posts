    <div class="form-container">
        <div class="form-header">
            <h1>Create New Post</h1>
            <p>Share your thoughts with the community</p>
        </div>
        
        <form action="/posts" method="post">
            <div class="form-group">
                <label for="user">Username</label>
                <input type="text" name="username" id="user" placeholder="Enter your username" maxlength="10" required>
                <div class="character-count"><span id="username-count">10</span> characters remaining</div>
            </div>
            
            <div class="form-group">
                <label for="content">Post Content</label>
                <textarea name="content" id="content" placeholder="What's on your mind?" required></textarea>
            </div>
            
            <button type="submit" class="submit-btn">Publish Post</button>
        </form>
    </div>

